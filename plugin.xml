<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-app-store-ratings-ios" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-app-store-ratings-ios</name>
    <description>Cordova Ratings App IOS10.3+ Plugin</description>
    <keywords>requestReview,ios</keywords>
    <js-module name="appStoreReview" src="www/ratings.js">
        <clobbers target="appStoreReview"/>
    </js-module>
    <platform name="ios">
        <header-file src="src/ratings.h"/>
        <source-file src="src/ratings.m"/>
        <config-file target="config.xml" parent="/*">
            <feature name="ratings">
                <param name="ios-package" value="ratings" />
            </feature>
        </config-file>
        <framework src="StoreKit.framework"/>
  </platform>
</plugin>
